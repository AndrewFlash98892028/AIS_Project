<Window x:Class="AIS.PasswordRestorationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIS"
        mc:Ignorable="d"
        Title="Восстановление пароля" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Введите вашу почту:" Margin="0,0,0,10"/>
            <TextBox x:Name="txtUsernameOrEmail" Width="200"/>
            <Button x:Name="btnSendResetLink" Content="Отправить ссылку на восстановление" Margin="0,10,0,0" Click="btnSendResetLink_Click"/>
        </StackPanel>
    </Grid>
</Window>
